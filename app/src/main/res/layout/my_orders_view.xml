<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/complete_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/display"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:padding="2dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_toEndOf="@id/display"
            android:layout_toRightOf="@id/display"/>

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:text="quantity"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_toEndOf="@id/display"
            android:layout_toRightOf="@id/display"/>

        <TextView
            android:id="@+id/mrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quantity"
            android:layout_marginTop="10dp"
            android:text="MRP."
            android:textSize="12sp"
            android:layout_toEndOf="@id/display"
            android:layout_toRightOf="@id/display"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mrp"
            android:text="price"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/display"
            android:layout_toRightOf="@id/display"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/itemNumLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/view"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X "
            android:textColor="#DC143C"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/itemsNum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="#DC143C"
            android:textSize="20sp" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/complete_view"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="#BBC3CC"
        android:layout_marginTop="8dp"/>

</RelativeLayout>